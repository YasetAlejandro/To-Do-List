<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Tarea</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Editar Tarea</h1>
    <form action="/tasks/update/<%= task.id %>" method="POST" class="task-form">
      <input type="text" name="title" value="<%= task.title %>" required>
      <input type="text" name="description" value="<%= task.description %>">
      <input type="date" name="end_date" value="<%= task.end_date ? task.end_date.toISOString().slice(0,10) : '' %>">
      <select name="priority">
        <option value="1" <%= task.priority === 1 ? 'selected' : '' %>>Baja</option>
        <option value="2" <%= task.priority === 2 ? 'selected' : '' %>>Media</option>
        <option value="3" <%= task.priority === 3 ? 'selected' : '' %>>Alta</option>
      </select>
      <button type="submit">Actualizar Tarea</button>
    </form>
    <a href="/tasks">Volver a la lista</a>
  </div>
</body>
</html>
